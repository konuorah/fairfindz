{
  "manifest_version": 3,
  "name": "Fair Findz",
  "version": "0.1.1",
  "description": "Discover minority-owned alternatives while shopping on Amazon",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": ["storage", "activeTab", "tabs", "scripting", "notifications"],
  "host_permissions": [
    "*://*.amazon.com/*",
    "https://*.supabase.co/*"
  ],
  "action": {
    "default_title": "View Minority-owned alternatives"
  },
  "options_page": "options/options.html",
  "background": {
    "service_worker": "background/service-worker.js"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "data/businesses.json",
        "content/auth-modal.html",
        "icons/*.png"
      ],
      "matches": ["*://*.amazon.com/*"]
    }
  ],
  "content_scripts": [
    {
      "matches": ["*://*.amazon.com/*"],
      "js": ["content/auth-modal.js", "content/content.js"],
      "css": ["content/content.css", "content/auth-modal.css"],
      "run_at": "document_idle"
    }
  ]
}
